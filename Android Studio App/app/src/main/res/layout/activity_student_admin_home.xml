<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="40dp"
    android:paddingTop="60dp"
    android:paddingRight="40dp"
    android:paddingBottom="60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/aus_logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/LabelTextViewStyle"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AUS at a Glance"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivWebsite"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="#871D1D"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:srcCompat="@drawable/aus_website" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivBanner"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:background="#871D1D"
            app:srcCompat="@drawable/aus_banner" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutStudent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSearch"
            style="@style/LabelTextViewStyle"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Search Jobs"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnWishlist"
            style="@style/LabelTextViewStyle"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Job Wishlist"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutAdmin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPost"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            style="@style/LabelTextViewStyle"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Post Jobs" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            style="@style/LabelTextViewStyle"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="View Jobs" />
    </LinearLayout>
</LinearLayout>